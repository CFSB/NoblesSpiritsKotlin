<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/riv_recommend_enjoy_life_child"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_170"
        android:scaleType="centerCrop"
        app:riv_corner_radius="@dimen/dp_5"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_enjoy_life_item_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:maxLines="2"
        android:singleLine="true"
        android:textColor="@color/common_text_color"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/riv_recommend_enjoy_life_child"
        app:layout_constraintTop_toBottomOf="@+id/riv_recommend_enjoy_life_child" />

</androidx.constraintlayout.widget.ConstraintLayout>