<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.youth.banner.Banner
        android:id="@+id/banner_home_recommend"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@drawable/ic_home_banner_place_holder"
        app:image_scale_type="center_crop"
        app:indicator_drawable_selected="@drawable/shape_home_banner_indicator_selector"
        app:indicator_drawable_unselected="@drawable/shape_home_banner_indicator_normal"
        app:indicator_height="8dp"
        app:indicator_margin="5dp"
        app:indicator_width="8dp"/>


</RelativeLayout>