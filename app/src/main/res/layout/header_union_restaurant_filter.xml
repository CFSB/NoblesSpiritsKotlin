<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_40"
    android:background="@color/write"
    android:orientation="horizontal">


    <CheckBox
        android:id="@+id/cb_union_cook_style_filter"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="西餐"
        android:paddingHorizontal="@dimen/dp_60"
        android:button="@null"
        android:drawableRight="@drawable/union_selector_restaurant_filter_check"
        android:gravity="center" />

    <TextView
        android:layout_width="@dimen/base_horizontal_line_height"
        android:layout_height="match_parent"
        android:background="@color/common_pressed_bg_color" />

    <CheckBox
        android:id="@+id/cb_union_price_filter"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingHorizontal="@dimen/dp_45"
        android:background="@null"
        android:includeFontPadding="true"
        android:text="3000-5000"
        android:drawablePadding="@dimen/dp_4"
        android:gravity="center"
        android:button="@null"
        android:drawableRight="@drawable/union_selector_restaurant_filter_check" />

</LinearLayout>