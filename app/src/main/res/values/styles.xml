<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:windowBackground">@color/window_bg_color</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="ToolBar">
        <item name="android:background">@android:color/white</item>
        <item name="android:height">@dimen/base_tool_bar_height</item>
        <item name="navigationIcon">@drawable/ic_home_ab_rich_scan</item>
    </style>

    <style name="BaseRecycleViewStyle">
        <item name="android:scrollbars">none</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:overScrollMode">never</item>
    </style>


</resources>
