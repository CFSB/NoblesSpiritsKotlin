<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:windowBackground">@color/window_bg_color</item>
        <item name="android:typeface">monospace</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="ToolBar">
        <item name="android:background">@android:color/white</item>
        <item name="android:height">@dimen/base_tool_bar_height</item>
        <item name="navigationIcon">@drawable/ic_home_ab_rich_scan</item>
    </style>

    <style name="BaseRecycleViewStyle">
        <item name="android:scrollbars">none</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <!--限时抢购倒计时style-->
    <style name="RushBuyCountDownTimerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:text">0</item>
        <item name="android:textColor">@android:color/black</item>
    </style>


    <style name="SnapUpViewColon">
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:text">天</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <!--SwipeBackTheme-->
    <style name="SwipeBackStyle" parent="@style/AppTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>




</resources>
